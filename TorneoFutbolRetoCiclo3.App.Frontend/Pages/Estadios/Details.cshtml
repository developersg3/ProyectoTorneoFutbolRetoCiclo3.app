@page
@model TorneoFutbolRetoCiclo3.App.Frontend.Pages.Estadios.DetailsModel
@{
}
<h1>Detalles del Estadio</h1>
<table class="table table-dark">
    <tr>
        <th scope="col" asp-for="estadio.nombre_estadio">Nombre</th>
        <td>@Model.estadio.nombre_estadio</td>
    </tr>
    <tr>
        <th scope="col" asp-for="estadio.direccion_estadio">Direccion</th>
        <td>@Model.estadio.direccion_estadio</td>
    </tr>
    <tr>
        <th scope="col">Municipio</th>
        @if (Model.estadio.Municipio == null)
        {
            <td>
                <a class="btn btn-primary" asp-page="./Asignar_Municipio_a_Estadio" asp-route-id="@Model.estadio.EstadioId">
                    Asignar Municipio
                </a>
            </td>
        }
        else
        {
            <td>@Model.estadio.Municipio.nombre_municipio</td>
        }
    </tr>

    <tr>
        <th scope="col" asp-for="estadio.MunicipioId">Id Municipio</th>
        <td>@Model.estadio.MunicipioId</td>
    </tr>
</table>
<a class="btn btn-primary" asp-page="./Index">Volver</a>