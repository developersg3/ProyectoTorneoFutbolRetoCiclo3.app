@page
@using TorneoFutbolRetoCiclo3.App.Dominio
@model TorneoFutbolRetoCiclo3.App.Frontend.Pages.Novedades.EditModel
@{
}
<h1>Editar Novedad</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="novedad.NovedadId"></label>
        <input asp-for="novedad.NovedadId" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label asp-for="novedad.minuto_novedad"></label>
        <input asp-for="novedad.minuto_novedad" class="form-control">
        <span asp-validation-for="novedad.minuto_novedad" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="novedad.Tipo_novedadId"></label>
        <input asp-for="novedad.Tipo_novedadId" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="novedad.EquipoId"></label>
        <input asp-for="novedad.EquipoId" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="novedad.PartidoId"></label>
        <input asp-for="novedad.PartidoId" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary">Editar Novedad</button>
</form>
<a class="btn btn-secondary" asp-page="./Index">Volver</a>