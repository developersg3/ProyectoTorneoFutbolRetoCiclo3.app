@page
@using TorneoFutbolRetoCiclo3.App.Dominio
@model TorneoFutbolRetoCiclo3.App.Frontend.Pages.Jugadores.EditModel
@{
}
<h1>Editar Jugador</h1>
<a class="btn btn-secondary" asp-page="./Index">Volver</a>
<form method="post">
    <div class="form-group">
        <label asp-for="jugador.JugadorId"></label>
        <input asp-for="jugador.JugadorId" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label asp-for="jugador.nombre_jugador"></label>
        <input asp-for="jugador.nombre_jugador" class="form-control">
        <span asp-validation-for="jugador.nombre_jugador" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="jugador.apellido_jugador"></label>
        <input asp-for="jugador.apellido_jugador" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="jugador.numero_jugador"></label>
        <input asp-for="jugador.numero_jugador" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="jugador.EquipoId"></label>
        <input asp-for="jugador.EquipoId" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="jugador.Posicion_jugadorId"></label>
        <input asp-for="jugador.Posicion_jugadorId" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary">Editar Jugador</button>
</form>
